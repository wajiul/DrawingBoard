@model BoardUser

<div class="container" style="min-height:80vh;">

    <form class="mt-5" method="post" asp-action="Share" asp-controller="Board">
        <div class="col-md-5 col-12 ms-auto me-auto">
            <input asp-for="BoardId" value="@Model.BoardId" hidden /> 
            <div class="form-floating mb-2">
                <input asp-for="UserName" class="form-control" placeholder="Owajeul">
                <label asp-for="UserName"></label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>
            <button class="btn btn-primary py-3 w-100">Submit</button>
        </div>
    </form>

</div>


