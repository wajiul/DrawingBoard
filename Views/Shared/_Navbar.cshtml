@{
    string name = (string)ViewData["UserName"];
    string userId = (string)ViewData["UserId"];
}
<nav class="navbar navbar-expand-lg bg-primary py-2" data-bs-theme="dark">
    <div class="container">
        <a class="navbar-brand" asp-action="MyBoard" asp-route-userId="@userId">DBoard</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarColor01">
            <ul class="navbar-nav me-auto">
                @if(!string.IsNullOrEmpty(userId)) 
                {
                    <li class="nav-item">
                        <a 
                            asp-action="MyBoard" asp-route-userId="@userId"
                            class="nav-link">
                            My board
                        </a>
                    </li>
                }
                <li class="nav-item">
                    <a 
                        asp-action="Library" asp-route-userId="@userId"
                        class="nav-link">Library</a>
                </li>
            </ul>
           <div>
               @if(!string.IsNullOrEmpty(userId)) 
               {
                    <a class="text-success text-decoration-none" asp-action="MyBoard" asp-route-userId="@userId">@name</a>
               }
           </div>
        </div>
    </div>
</nav>

